{
  "name": "Better Achievements",
  "version": "v1.2",
  "author": "RasitAyaz",
  "manifest_version": 5,
  "inject": {
    "shared.css": [
      "SP",
      "MainMenu"
    ]
  },
  "patches": {
    "Rare Shine Animation": {
      "default": "Only in achievements page",
      "type": "dropdown",
      "values": {
        "Disabled": {
          "rare_achievement_shine/disabled.css": [
            "SP",
            "MainMenu"
          ]
        },
        "Only in achievements page": {
          "rare_achievement_shine/default.css": [
            "SP",
            "MainMenu"
          ]
        },
        "Everywhere": {
          "rare_achievement_shine/everywhere.css": [
            "SP",
            "MainMenu"
          ]
        }
      }
    },
    "Achievement Icon Radius": {
      "default": "0px",
      "type": "slider",
      "values": {
        "0px": {
          "--achievement-icon-radius": [
            "0px",
            "SP",
            "MainMenu"
          ]
        },
        "3px": {
          "--achievement-icon-radius": [
            "3px",
            "SP",
            "MainMenu"
          ]
        },
        "5px": {
          "--achievement-icon-radius": [
            "5px",
            "SP",
            "MainMenu"
          ]
        },
        "10px": {
          "--achievement-icon-radius": [
            "10px",
            "SP",
            "MainMenu"
          ]
        },
        "15px": {
          "--achievement-icon-radius": [
            "15px",
            "SP",
            "MainMenu"
          ]
        },
        "Round": {
          "--achievement-icon-radius": [
            "50%",
            "SP",
            "MainMenu"
          ]
        }
      }
    }
  },
  "id": "ea439a7f-1205-4d17-bdf9-baf1f8208bc8"
}