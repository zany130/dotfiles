{
  "name": "Better Game Badges",
  "version": "v1.7",
  "author": "RasitAyaz",
  "manifest_version": 5,
  "inject": {
    "shared.css": [
      "SP"
    ]
  },
  "patches": {
    "Compatibility badges": {
      "default": "Visible on focus",
      "type": "dropdown",
      "values": {
        "Hidden": {
          "compatibility/hidden.css": [
            "SP"
          ]
        },
        "Visible on focus": {
          "compatibility/highlighted.css": [
            "SP"
          ]
        },
        "Always visible": {
          "compatibility/visible.css": [
            "SP"
          ]
        }
      }
    },
    "Compatibility badge style": {
      "default": "Hide the Deck icon",
      "type": "dropdown",
      "values": {
        "Hide the Deck icon, playable & verified badges": {
          "compatibility/no_deck_icon.css": [
            "SP"
          ],
          "compatibility/no_playable_verified.css": [
            "SP"
          ]
        },
        "Hide the Deck icon & verified badge": {
          "compatibility/no_deck_icon.css": [
            "SP"
          ],
          "compatibility/no_verified.css": [
            "SP"
          ]
        },
        "Hide the Deck icon": {
          "compatibility/no_deck_icon.css": [
            "SP"
          ]
        },
        "Show all": {}
      }
    },
    "In library badges": {
      "default": "Visible on focus",
      "type": "dropdown",
      "values": {
        "Hidden": {
          "in_library/hidden.css": [
            "SP"
          ]
        },
        "Visible on focus": {
          "in_library/highlighted.css": [
            "SP"
          ]
        },
        "Always visible": {
          "in_library/visible.css": [
            "SP"
          ]
        }
      }
    },
    "Install status badges": {
      "default": "Visible on focus",
      "type": "dropdown",
      "values": {
        "Hidden": {
          "install_status/hidden.css": [
            "SP"
          ]
        },
        "Visible on focus": {},
        "Always visible": {
          "install_status/visible.css": [
            "SP"
          ]
        }
      }
    },
    "Install status badge style": {
      "default": "Show both",
      "type": "dropdown",
      "values": {
        "Hide installed badge": {
          "install_status/no_installed.css": [
            "SP"
          ]
        },
        "Hide uninstalled badge": {
          "install_status/no_uninstalled.css": [
            "SP"
          ]
        },
        "Show both": {}
      }
    },
    "Hide badges after (seconds)": {
      "default": "0.75",
      "type": "slider",
      "values": {
        "Never": {},
        "0.75": {
          "fade_out_badges.css": [
            "SP"
          ],
          "--badge-fade-delay": [
            "0.75s",
            "SP"
          ]
        },
        "1": {
          "fade_out_badges.css": [
            "SP"
          ],
          "--badge-fade-delay": [
            "1s",
            "SP"
          ]
        },
        "1.5": {
          "fade_out_badges.css": [
            "SP"
          ],
          "--badge-fade-delay": [
            "1.5s",
            "SP"
          ]
        },
        "2": {
          "fade_out_badges.css": [
            "SP"
          ],
          "--badge-fade-delay": [
            "2s",
            "SP"
          ]
        },
        "3": {
          "fade_out_badges.css": [
            "SP"
          ],
          "--badge-fade-delay": [
            "3s",
            "SP"
          ]
        }
      }
    }
  },
  "id": "2b325745-7e41-4afb-894b-5afb7a34196c"
}